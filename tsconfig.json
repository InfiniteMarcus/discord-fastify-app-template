{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": ["esnext"],
    "moduleResolution": "node",
    "removeComments": true,
    "strictPropertyInitialization": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
  },
  "exclude": [
    "node_modules",
    "./node_modules",
    "./node_modules/*"
  ]
}